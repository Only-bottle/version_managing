{
  "commitizen": {
    "name": "cz_customize",
    "version": "0.6.2",
    "tag_format": "v$major.$minor.$patch",
    "version_files": [
      ".cz.json:version"
    ],
    "customize": {
      "message_template": "{{change_type}}:{% if show_message %} {{message}}{% endif %}",
      "example": "feat: this feature enable customize through config file",
      "schema": "<type>: <body>",
      "schema_pattern": "(build|ci|docs|feat|fix|refactor|test|chore|revert|bump|merge):(\\s.*)",
      "bump_pattern": "^(break|release|feat|fix|hotfix)",
      "bump_map": {
        "break": "MAJOR",
        "release": "MINOR",
        "feat": "PATCH",
        "fix": "PATCH",
        "hotfix": "PATCH"
      },
      "change_type_order": [
        "BREAKING CHANGE",
        "feat",
        "fix",
        "refactor",
        "perf"
      ]
    }
  }
}